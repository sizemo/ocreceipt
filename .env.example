# Required
DEFAULT_ADMIN_PASSWORD=replace-with-strong-admin-password

# Optional
DEFAULT_ADMIN_USERNAME=admin

# Security hardening (recommended for reverse proxy deployments)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=strict
FORCE_HTTPS=true
ALLOWED_HOSTS=receipts.example.com,localhost,127.0.0.1
PROXY_TRUSTED_HOSTS=127.0.0.1,::1

# Login rate limiting
LOGIN_RATE_LIMIT_ATTEMPTS=8
LOGIN_RATE_LIMIT_WINDOW_SECONDS=300
LOGIN_RATE_LIMIT_BLOCK_SECONDS=900

# OCR retry (fast first pass + full retry when confidence is low)
OCR_RETRY_ON_LOW_CONFIDENCE=true
OCR_RETRY_CONFIDENCE_THRESHOLD=60
OCR_RETRY_FULL_MODE_ENABLED=false
UPLOAD_DEDUPE_WINDOW_SECONDS=900
OCR_DEBUG_ON_LOW_CONFIDENCE=true
# Optional: custom folder for low-confidence OCR debug bundles
# OCR_DEBUG_DIR=/app/app/uploads/debug

# Host port mapping (left side of APP_PORT:8000)
APP_PORT=8780

# When exposing via domain, include every hostname served by this app
# Example: ALLOWED_HOSTS=receipts.example.com,www.receipts.example.com,localhost,127.0.0.1
